OASISFormat: 0.3
Name:        ilist
Version:     0.1.0
Synopsis:    Indexed lists
Authors:     Wojciech Meyer
License:     BSD3
Plugins:     META (0.2), StdFiles (0.2)
BuildTools:  ocamlbuild

Library "ilist"
  Path:         lib/
  Modules:      NList, IList
  BuildTools:   ocamlbuild

Library "ilist.syntax"
  Path:         syntax/
  BuildDepends: ilist
  Modules:      Pa_ilist
  BuildTools:   ocamlbuild

# For this to make it work you have to drop ast_mapper.cmo from trunk
# to the _build directory
Executable "ppx_ilist"
  Path:         ppx/
  BuildDepends: ilist, compiler-libs, compiler-libs.common
  MainIs:       ppx_ilist.ml
  BuildTools:   ocamlbuild
  ByteOpt:      ast_mapper.cmo

Library "ilist-examples"
  Path:         examples/
  BuildDepends: ilist, ilist.syntax
  Modules:      Construct, List_of_list, Safe_path, Uniform_tuples
  BuildTools:   ocamlbuild

Library "ilist-examples-ppx"
  Path:         ppx_examples/
  BuildDepends: ilist
  Modules:      Ppx_example
  BuildTools:   ocamlbuild
  ByteOpt:      -ppx ppx/ppx_ilist.byte
  NativeOpt:    -ppx ppx/ppx_ilist.byte

Document "ilist-doc"
  Title:                API reference for ilist
  Type:                 ocamlbuild (0.3)
  Install:              true
  InstallDir:           $htmldir/api
  BuildTools:           ocamldoc
  XOCamlbuildPath:      ./
  XOCamlbuildLibraries: ilist

SourceRepository master
  Type:     git
  Location: git://github.com/danmey/ilist.git
